<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
		xmlns="http://xamarin.com/schemas/2014/forms"
		xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
		x:Class="KoorweekendApp2017.Pages.EventSinglePage"
		Title="{Binding Title}"
		Padding="15,15,15,0">
	<ContentPage.Content>
		<StackLayout VerticalOptions="FillAndExpand">
			<Label Text="{Binding Title}" HorizontalTextAlignment="Center"></Label>
			<Label Text="{Binding StartDateFormatted}" HorizontalTextAlignment="Center"></Label>
			<Label Text="{Binding StartTimeFormatted}" HorizontalTextAlignment="Center"></Label>
			<Label Text="{Binding EndDateFormatted}" HorizontalTextAlignment="Center"></Label>
			<Label Text="{Binding EndTimeFormatted}" HorizontalTextAlignment="Center"></Label>
			<Label Text="{Binding Address}" HorizontalTextAlignment="Center"></Label>
			<Label Text="{Binding AreaCode}" HorizontalTextAlignment="Center"></Label>
			<Label Text="{Binding City}" HorizontalTextAlignment="Center"></Label>
			<ListView
					x:Name="songForEventListView"
					VerticalOptions="FillAndExpand"
					SeparatorVisibility="None">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ImageCell Text="{Binding Title}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
