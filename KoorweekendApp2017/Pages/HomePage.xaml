<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
  xmlns="http://xamarin.com/schemas/2014/forms"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  x:Class="KoorweekendApp2017.Pages.HomePage"
  Title="Home"
  BackgroundColor="#404040">
	<ContentPage.Content>
    <Grid x:Name="controlGrid" RowSpacing="5" ColumnSpacing="5" Padding="0,5,0,5">
      <Grid.RowDefinitions>
        <RowDefinition Height="125"/>
        <RowDefinition Height="*"/>
        <RowDefinition Height="*"/>
        <RowDefinition Height="*"/>
      </Grid.RowDefinitions>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="125"/>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>
      
      <StackLayout Grid.Row="0" Grid.Column="0" BackgroundColor="Red">
      <Image x:Name="label" Source="onevoice_logo_app_less.png" Aspect="AspectFill" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"/>
      </StackLayout>
      
      <StackLayout Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" BackgroundColor="Red" x:Name="birthGrid">
      <Label Font="Bold,18" HorizontalOptions="Center"  TextColor="White" x:Name="birthName"/>
      <Label HorizontalOptions="Center" TextColor="White" x:Name="birthDate"/>
      <Label HorizontalOptions="Center" TextColor="White" Font="Bold,20" x:Name="birthAge"/>
      <Label HorizontalOptions="Center"  TextColor="White" x:Name="birthToday"/>
      <Label HorizontalOptions="Center" VerticalOptions="End" Font="10" TextColor="White" x:Name="birthClick"/>
      </StackLayout>

      <StackLayout Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" BackgroundColor="Red" x:Name="eventGrid">
      <Label Font="Bold,18" HorizontalOptions="Center" TextColor="White" x:Name="eventTitle"/>
      <Label HorizontalOptions="Center" TextColor="White" x:Name="eventDatum"/>
      <Label HorizontalOptions="Center" TextColor="White" x:Name="eventTime"/>
      <Label HorizontalOptions="Center" VerticalOptions="End" Font="10" TextColor="White" x:Name="eventClick"/>
      </StackLayout>

      <StackLayout Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" BackgroundColor="Red">
      <Label Text="Nieuws:" Font="Bold,18" HorizontalOptions="Center" TextColor="White"/>
      <Label Text="Deze week hebben we..." HorizontalOptions="Center" TextColor="White"/>
      </StackLayout>
    </Grid>
	</ContentPage.Content>
</ContentPage>