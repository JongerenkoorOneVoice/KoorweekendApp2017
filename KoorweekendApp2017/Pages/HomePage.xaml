<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
  xmlns="http://xamarin.com/schemas/2014/forms"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  x:Class="KoorweekendApp2017.Pages.HomePage"
  Title="Home"
  BackgroundColor="#404040">
  <ContentPage.Content>
		
    <Grid x:Name="controlGrid" RowSpacing="5" ColumnSpacing="5" Padding="0,5,0,5">
      <Grid.RowDefinitions>
        <RowDefinition Height="{Binding ScreenWidth}"/>
        <RowDefinition Height="*"/>
        <RowDefinition Height="*"/>
      </Grid.RowDefinitions>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="{Binding ScreenWidth}"/>
        <ColumnDefinition Width="{Binding ScreenWidth}"/>
        <ColumnDefinition Width="{Binding ScreenWidth}"/>
      </Grid.ColumnDefinitions>
      <StackLayout Grid.Row="0" Grid.Column="0" BackgroundColor="Red">
        <Image x:Name="label" Source="onevoice_logo_app_less.png" Aspect="AspectFill" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"/>
      </StackLayout>
    </Grid>
		
  </ContentPage.Content>
</ContentPage>