<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
  xmlns="http://xamarin.com/schemas/2014/forms" 
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
  x:Class="KoorweekendApp2017.ChoirUniform" 
  Title="Koorkleding" >
  <ContentPage.Content>
    <ScrollView>
      <Grid x:Name="controlGrid" RowSpacing="5" ColumnSpacing="5" Padding="0,5,0,5">
        <Grid.RowDefinitions>
          <RowDefinition Height="30"/>
          <RowDefinition Height="250"/>
          <RowDefinition Height="250"/>
          <RowDefinition Height="250"/>          
          <RowDefinition Height="30"/>
          <RowDefinition Height="225"/>
          <RowDefinition Height="175"/>
          <RowDefinition Height="250"/>          
          <RowDefinition Height="425"/>
        </Grid.RowDefinitions>
        
        <StackLayout Grid.Row="0" BackgroundColor="#64b6ba" Margin="70,0,70,0">
          <Label Text="Zomer 2017" Font="Bold,24" HorizontalOptions="Center"/>
        </StackLayout>
        
        <StackLayout Grid.Row="1" BackgroundColor="#7fe4e8" Margin="5,0,35,0">
          <Label Text="Dames:" Font="Bold,16" HorizontalOptions="Center"/>
          <Label Text="Licht grijze met witte kleding. Dit" HorizontalOptions="Center" />
          <Label Text="mag eventueel gemengd op één" HorizontalTextAlignment="Center"/>
          <Label Text="kledingstuk (bijv. strepen of print)." HorizontalTextAlignment="Center"/>
          <Label Text="Turquoise kleurige accessoires in"  HorizontalTextAlignment="Center"/>
          <Label Text="lijn met de kleurenkaart die jullie" HorizontalTextAlignment="Center"/>
          <Label Text="Ontvangen. Schoenen ook in deze" HorizontalTextAlignment="Center"/>
          <Label Text="kleurstelling (wit, grijs, turquoise" HorizontalTextAlignment="Center"/>
          <Label Text="en zwart mag ook)." HorizontalTextAlignment="Center"/>
        </StackLayout>

        <StackLayout Grid.Row="2" BackgroundColor="#7fe4e8" Margin="35,0,5,0">
          <Label Text="Heren:" Font="Bold,16" HorizontalOptions="Center"/>
          <Label Text="Licht grijze met witte kleding. Dit" HorizontalOptions="Center" />
          <Label Text="mag eventueel gemengd op één" HorizontalTextAlignment="Center"/>
          <Label Text="kledingstuk (bijv. brede strepen of " HorizontalTextAlignment="Center"/>
          <Label Text="print). Eventueel turquoise kleurige"  HorizontalTextAlignment="Center"/>
          <Label Text="stropdas of andere accessoire (bijv." HorizontalTextAlignment="Center"/>
          <Label Text="mannensjaaltje). Schoenen ook in" HorizontalTextAlignment="Center"/>
          <Label Text="deze kleurstelling (wit, grijs," HorizontalTextAlignment="Center"/>
          <Label Text="turquoise en zwart mag ook)." HorizontalTextAlignment="Center"/>
        </StackLayout>

        <Image Source="Kleding_Z.png" Grid.Row="3" VerticalOptions="FillAndExpand" />

        <StackLayout Grid.Row="4" BackgroundColor="#64b6ba" Margin="70,0,70,0">
          <Label Text="Winter 2017" Font="Bold,24" HorizontalOptions="Center"/>
        </StackLayout>

        <StackLayout Grid.Row="5" BackgroundColor="#7fe4e8" Margin="5,0,35,0">
          <Label Text="Dames:" Font="Bold,16" HorizontalOptions="Center"/>
          <Label Text="Zwarte en witte kleding. Dit mag" HorizontalOptions="Center" />
          <Label Text="eventueel gemengd op 1 kledingstuk" HorizontalTextAlignment="Center"/>
          <Label Text="(bijv. strepen of print). Turquoise" HorizontalTextAlignment="Center"/>
          <Label Text="kleurige accessoires in lijn met de"  HorizontalTextAlignment="Center"/>
          <Label Text="Kleurenkaart die jullie ontvangen." HorizontalTextAlignment="Center"/>
          <Label Text="Schoenen ook in de kleurstelling" HorizontalTextAlignment="Center"/>
          <Label Text="(wit, zwart, turquoise)" HorizontalTextAlignment="Center"/>
        </StackLayout>

        <StackLayout Grid.Row="6" BackgroundColor="#7fe4e8"  Margin="35,0,5,0">
          <Label Text="Heren:" Font="Bold,16" HorizontalOptions="Center"/>
          <Label Text="Zwarte en witte kleding," HorizontalOptions="Center" />
          <Label Text="turquoise kleurige smalle " HorizontalTextAlignment="Center"/>
          <Label Text="stropdas. Je mag bijv. ook een " HorizontalTextAlignment="Center"/>
          <Label Text="trui over een overhemd. Schoenen "  HorizontalTextAlignment="Center"/>
          <Label Text="ook in deze kleurstelling (wit," HorizontalTextAlignment="Center"/>
          <Label Text="zwart, turquoise)." HorizontalTextAlignment="Center"/>
        </StackLayout>

        <Image Source="Kleding_W.png" Grid.Row="7" VerticalOptions="FillAndExpand"/>

        <StackLayout Grid.Row="8" BackgroundColor="#64b6ba" Margin="5,0,5,0">
          <Label Text="Disclaimer:" Font="Bold,16" HorizontalOptions="Center"/>
          <Label Text="Liefst wit én zwart/grijs beide dragen  " HorizontalTextAlignment="Center"/>
          <Label Text="(dus niet geheel wit). Wit moet écht  " HorizontalTextAlignment="Center"/>
          <Label Text="wit of off-white zijn, en dus geen " HorizontalTextAlignment="Center"/>
          <Label Text="créme. Als je een print op je kleren" HorizontalTextAlignment="Center"/>
          <Label Text="hebt, mag deze niet te druk zijn" HorizontalTextAlignment="Center"/>
          <Label Text="of een 'twijfelachtige' tekst. Grote" HorizontalTextAlignment="Center"/>
          <Label Text="gaten in broeken mogen niet. Turquoise  " HorizontalTextAlignment="Center"/>
          <Label Text="mag niet afsteken bij de kleurenkaart, " HorizontalTextAlignment="Center"/>
          <Label Text="maar het hoeft dus niet dezelfde" HorizontalTextAlignment="Center"/>
          <Label Text="kleur te zijn (als je accessoire" HorizontalTextAlignment="Center"/>
          <Label Text="lijn is met de kleurenkaart is het  " HorizontalTextAlignment="Center"/>
          <Label Text="goed). Turquoise is dus alleen voor " HorizontalTextAlignment="Center"/>
          <Label Text="accessoires, het mogen geen" HorizontalTextAlignment="Center"/>
          <Label Text="kledingstukken zijn." HorizontalTextAlignment="Center"/>
          <Label Text="Als je twijfelt, vraag het het bestuur!" Font="Bold" HorizontalOptions="Center"/>
        </StackLayout>
      </Grid>
    </ScrollView>
  </ContentPage.Content>
</ContentPage>
