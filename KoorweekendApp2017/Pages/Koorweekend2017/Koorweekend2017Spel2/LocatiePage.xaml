<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KoorweekendApp2017.Pages.Koorweekend2017.Koorweekend2017Spel2.LocatiePage"
             Title ="Locatie">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="10,10,10,0" x:Name="Stack">
                <Image Aspect="Fill" x:Name="LocationImage"/>
                <Label Text="De volgende locatie:" Font="Bold, 18" HorizontalTextAlignment="Center"/>
                <Label x:Name="LocationDesc" HorizontalTextAlignment="Center"/>
                <Label x:Name="Navigate" Font="11" Margin="0,10,0,0" HorizontalTextAlignment="Center"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>