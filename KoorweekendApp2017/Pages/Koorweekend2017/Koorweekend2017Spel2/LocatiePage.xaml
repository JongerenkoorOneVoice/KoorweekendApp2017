<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KoorweekendApp2017.Pages.Koorweekend2017.Koorweekend2017Spel2.LocatiePage"
             Title ="Locatie">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="10,10,10,0">
                <Image Source="Route1.jpg" Aspect="Fill"/>
                <Label Text="Locatie 1:" Font="Bold, 18" HorizontalTextAlignment="Center"/>
                <Label Text="De volgende locatie bevind zich bij een eet tafel, ga vanaf de barcode naar rechts en blijf daar echtdoor rijden, totdat de tafel in zicht is. Daar zal een barcode zijn"/>
                <Label Text="Wanneer de weg echt kwijt bent, kun je navigeren naar de volgende locatie. Wel zijn er dan strafpunten aan verbonden..." Font="11" Margin="0,10,0,0"/>
                <Button Text="Navigeer" x:Name="Lost" HorizontalOptions="Center" BorderColor="Red" BorderWidth="1" BorderRadius="5"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>