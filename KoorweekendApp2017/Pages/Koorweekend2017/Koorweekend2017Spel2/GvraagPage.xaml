<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KoorweekendApp2017.Pages.Koorweekend2017.Koorweekend2017Spel2.GvraagPage"
             Title="Vraag">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="10,10,10,0">
                <Image Aspect="AspectFill" x:Name="QuestionImage"/>
                <Label Text="Vraag:" Font="Bold, 18" HorizontalTextAlignment="Center"/>
                <Label x:Name="QuestionDesc" HorizontalTextAlignment="Center"/>
                <StackLayout Padding = "0,10,0,0" Orientation = "Horizontal" HorizontalOptions = "Center" VerticalOptions = "Start" x:Name="FirstRow">
                </StackLayout>
                <StackLayout Padding = "0,10,0,0" Orientation = "Horizontal" HorizontalOptions = "Center" VerticalOptions = "Start" x:Name="SecondRow">
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>